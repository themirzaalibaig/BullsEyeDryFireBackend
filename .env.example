# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bullseye
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bullseye?schema=public

# For Docker Compose (use service name instead of localhost)
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/bullseye?schema=public

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=redis
REDIS_PORT=6379
REDIS_URL=redis://:redis@localhost:6379

# For Docker Compose (use service name instead of localhost)
# REDIS_URL=redis://:redis@redis:6379

# ============================================
# API Configuration
# ============================================
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGIN=*

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_MODEL=gpt-5

