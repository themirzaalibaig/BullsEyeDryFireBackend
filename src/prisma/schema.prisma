generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())

  messages ChatMessage[]
  bundles  SubscriptionBundle[]
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  question  String
  answer    String
  tokens    Int
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model SubscriptionBundle {
  id                String   @id @default(uuid())
  userId            String
  tier              String
  maxMessages       Int?
  remainingMessages Int?
  price             Float
  autoRenew         Boolean
  active            Boolean
  startDate         DateTime
  endDate           DateTime
  renewalDate       DateTime
  createdAt         DateTime @default(now())
  User              User     @relation(fields: [userId], references: [id])
}
